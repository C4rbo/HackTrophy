<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carbo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carbo_title_section"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:letterSpacing="0.03"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="12dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="2dp">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_carbo"
                android:contentDescription="@string/description_photo"
                android:padding="4dp"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carbo_title"
            android:textSize="38sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:shadowColor="#10000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/carbo_description"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="6sp"
            android:paddingHorizontal="32dp"/>

        <!-- Social Cards Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="16dp">

            <!-- GitHub Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/githubCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/github_black"
                app:rippleColor="#30FFFFFF"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:contentDescription="@string/description_photo"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_github"
                        app:tint="@android:color/white"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/github_title"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/github_username"
                            android:textColor="#BBFFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- LinkedIn Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/linkedinCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/linkedin_blue"
                app:rippleColor="#30FFFFFF"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:contentDescription="@string/description_photo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_linkedin" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/linkedin_title"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/linkedin_username"
                            android:textColor="#BBFFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Personal Website Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/websiteCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/website_bg"
                app:rippleColor="#30FFFFFF"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:contentDescription="@string/description_photo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_carbo"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/website_title"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/website_url"
                            android:textColor="#BBFFFFFF"
                            android:textSize="14sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>